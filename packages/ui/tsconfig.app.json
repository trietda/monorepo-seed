{
  "extends": "@seed/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "composite": true,

    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },

    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/stories/*"]
}
